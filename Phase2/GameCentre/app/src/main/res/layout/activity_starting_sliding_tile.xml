<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.slidingtiles.StartingActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/GameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Welcome To Sliding Tiles \n A Puzzle Game where you must arrange the numbers in the correct order"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Board Size: "
        android:textSize="17sp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="350dp"/>

    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-260dp"
        android:layout_toStartOf="@+id/SlidingTileAutoSave"
        android:text="New Game" />

    <Button
        android:id="@+id/SlidingTileAutoSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="35dp"
        android:text="Auto Saved" />

    <Button
        android:id="@+id/preset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GameText"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-215dp"
        android:layout_toStartOf="@+id/StartButton"
        android:text="Easy Win" />

    <Spinner
        android:id="@+id/complexity"
        android:layout_marginTop="350dp"
        android:layout_marginStart="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/complexity"
        android:dropDownWidth="match_parent"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownVerticalOffset="20dp"
        />

</RelativeLayout>