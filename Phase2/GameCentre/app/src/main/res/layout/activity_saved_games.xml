<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.gamecentre.SavedGamesActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="280dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Saved Games"
        tools:ignore="HardcodedText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:text="Sliding Tiles"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="270dp"
        android:text="Card Matching"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="65dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="119dp"
        app:srcCompat="@drawable/tile_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Sliding Tile's saved games" />

    <Button
        android:id="@+id/back"
        android:layout_width="59dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:text="back"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/SlidingTileSpinner"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="38dp"
        android:dropDownWidth="500dp"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownVerticalOffset="20dp"
        android:paddingTop="2sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Spinner
        android:id="@+id/cardMatchingSpinner"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="38dp"
        android:dropDownWidth="500dp"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownVerticalOffset="20dp"
        android:paddingTop="2sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

</android.support.constraint.ConstraintLayout>